{
    "openapi": "3.0.0",
    "info": {
        "title": "SiTerbang API",
        "description": "SiTerbang API Docs",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:3000",
            "description": "localhost"
        },
        {
            "url": "https://siterbang-api-test.km3ggwp.com",
            "description": "public api"
        }
    ],
    "tags": [
        {
            "name": "Auth",
            "description": ""
        },
        {
            "name": "Airplane",
            "description": ""
        },
        {
            "name": "Airlines",
            "description": ""
        }
    ],
    "paths": {
        "/auth/register": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Register a new account",
                "consumes": "application/json",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "email": {
                                        "type": "string",
                                        "format": "email"
                                    },
                                    "password": {
                                        "type": "string"
                                    },
                                    "confirm_password": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "description": "",
                "responses": {
                    "201": {
                        "description": "Create user success"
                    },
                    "409": {
                        "description": "Email alaready exist"
                    }
                }
            }
        },
        "/auth/login": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Login to user account",
                "consumes": "application/json",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "email": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "description": "",
                "responses": {
                    "200": {
                        "description": "Login successful"
                    },
                    "401": {
                        "description": "You're not authorized"
                    }
                }
            }
        },
        "/auth/forgot-password": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Forgot password",
                "consumes": "application/json",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "format": "email"
                                    }
                                }
                            }
                        }
                    }
                },
                "description": "",
                "responses": {
                    "200": {
                        "description": "Send email success, please check your email to reset password"
                    }
                }
            }
        },
        "/auth/reset-password": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Reset password",
                "consumes": "application/json",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "password": {
                                        "type": "string"
                                    },
                                    "confirm_password": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Reset password success"
                    },
                    "401": {
                        "description": "Password doesn't match"
                    },
                    "400": {
                        "description": "Invalid token"
                    }
                }
            }
        },
        "/airlines/all": {
            "get": {
                "tags": [
                    "Airlines"
                ],
                "security": {
                    "bearerAuth": []
                },
                "responses": {
                    "200": {
                        "description": "Get airlines success"
                    }
                }
            }
        }
    }
}